<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="Wheat" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="155*"/>
            <ColumnDefinition Width="43*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listBox1" HorizontalAlignment="Left" Height="298" VerticalAlignment="Top" Width="792" Grid.ColumnSpan="2"/>
        <Button x:Name="Add" Content="Add" Background="WhiteSmoke" HorizontalAlignment="Left" Height="38" Margin="210,350,0,0" VerticalAlignment="Top" Width="102" Click="Button_Click"/>
        <Button x:Name="Edit" Content="Edit" Background="WhiteSmoke" HorizontalAlignment="Left" Height="38" Margin="340,350,0,0" VerticalAlignment="Top" Width="102" Click="Edit_Click"/>
        <Button x:Name="Delete" Content="Delete" Background="WhiteSmoke" HorizontalAlignment="Left" Height="38" Margin="480,350,0,0" VerticalAlignment="Top" Width="102" Click="Delete_Click"/>

    </Grid>
</Window>
